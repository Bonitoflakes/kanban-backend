{
  "name": "supabase-drizzle-express-starter",
  "version": "1.0.0",
  "license": "MIT",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "build": "npx tsc",
    "dev": "tsx watch -r dotenv/config src/index.ts",
    "dev2": "nodemon --exec ts-node --skip-project -r dotenv/config src/index.ts --transpile-only",
    "introspect": "drizzle-kit introspect:pg",
    "generate": "drizzle-kit generate:pg",
    "migrate": "tsx -r dotenv/config src/migrate.ts",
    "studio": "drizzle-kit studio",
    "seed": "tsx ./src/utils/seed.ts",
    "drop": "tsx ./src/utils/drop.ts"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^13.1.2",
    "@types/cors": "^2.8.17",
    "@types/morgan": "^1.9.9",
    "drizzle-kit": "^0.20.16",
    "tsx": "^3.12.7",
    "nodemon": "^3.1.0",
    "typescript": "^5.1.3",
    "ts-node": "^10.9.2"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "drizzle-orm": "latest",
    "express": "^4.17.1",
    "morgan": "^1.10.0",
    "tiny-invariant": "^1.3.3"
  }
}
